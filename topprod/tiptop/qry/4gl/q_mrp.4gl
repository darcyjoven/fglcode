   #ELSE    
      LET g_plant_new = p_plant 
   #   CALL s_getdbs()       
   #   LET p_azp03 = g_dbs_new 
   #END IF    
   #No.FUN-980017--end  
   LET ms_default1 = ps_default1 
   LET g_bdate     = p_bdate                       
