#FUNCTION q_mrp(pi_multi_sel,pi_need_cons,ps_default1,p_azp03,p_bdate,p_edate,p_buk_type)   #No.FUN-980017
FUNCTION q_mrp(pi_multi_sel,pi_need_cons,ps_default1,p_plant,p_bdate,p_edate,p_buk_type)    #No.FUN-980017
   DEFINE   pi_multi_sel   LIKE type_file.num5,  	#No.FUN-680131 SMALLINT
